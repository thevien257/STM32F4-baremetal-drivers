#ifndef DS1307_H_
#define DS1307_H_

#include <stm32f4xx_cus.h>

#define DS1307_BUS_ADDR 0x68
#define DS1307_SEC_REG 0x0
#define DS1307_MIN_REG 0x1
#define DS1307_HOUR_REG 0x2
#define DS1307_DAY_REG 0x3
#define DS1307_DATE_REG 0x4
#define DS1307_MONTH_REG 0x5
#define DS1307_YEAR_REG 0x6
#define DS1307_CONTROL_REG 0x7
#define DS1307_RAM_REG 0x8

#define DS1307_TIME_FORMAT_12HRS_AM 0
#define DS1307_TIME_FORMAT_12HRS_PM 1
#define DS1307_TIME_FORMAT_24HRS 2

#define SUNDAY 1
#define MONDAY 2
#define TUESDAY 3
#define WEDNESDAY 4
#define THURSDAY 5
#define FRIDAY 6
#define SATURDAY 7

typedef struct {
	uint8_t date;
	uint8_t month;
	uint8_t year;
	uint8_t day;
} DS1307_date_t;

typedef struct {
	uint8_t date;
	uint8_t month;
	uint8_t year;
	uint8_t day;
} DS1307_date_t;

void DS1307_INIT();
void DS1307_SET_TIME();
void DS1307_SET_DATE();

#endif /* DS1307_H_ */
